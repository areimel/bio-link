---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Press Start 2P';
    --aw-font-mono: 'Courier Prime';

    /* Rainbow VHS inspired colors */
    --aw-color-vhs-yellow: #f7d959; /* Bright VHS yellow */
    --aw-color-vhs-orange: #f18344; /* Warm VHS orange */
    --aw-color-vhs-red: #da3440; /* Vibrant VHS red */
    --aw-color-vhs-magenta: #af375d; /* Deep VHS magenta */
    --aw-color-vhs-purple: #6c3451; /* Rich VHS purple */

    /* Main theme colors derived from VHS palette */
    --aw-color-primary: var(--aw-color-vhs-red);
    --aw-color-secondary: var(--aw-color-vhs-yellow);
    --aw-color-accent: var(--aw-color-vhs-magenta);
    
    --aw-color-text-heading: rgb(68, 68, 68); /* Dark gray from VHS logo */
    --aw-color-text-default: rgb(56, 56, 56);
    --aw-color-text-muted: rgb(56, 56, 56 / 66%);
    --aw-color-bg-page: #f2e2c8; /* Off-white from VHS box */

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: var(--aw-color-accent);
      color: white;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Press Start 2P';
    --aw-font-mono: 'Courier Prime';

    /* Dark mode - using the same VHS colors but with adjusted opacity/usage */
    --aw-color-vhs-yellow: #f7d959;
    --aw-color-vhs-orange: #f18344;
    --aw-color-vhs-red: #da3440;
    --aw-color-vhs-magenta: #af375d;
    --aw-color-vhs-purple: #6c3451;

    /* Main theme colors for dark mode */
    --aw-color-primary: var(--aw-color-vhs-red);
    --aw-color-secondary: var(--aw-color-vhs-yellow);
    --aw-color-accent: var(--aw-color-vhs-magenta);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(24, 26, 42); /* Darker but with a hint of blue */

    ::selection {
      background-color: var(--aw-color-accent);
      color: white;
    }
  }

  /* Custom class for Press Start 2P font */
  .press-start-2p-regular {
    font-family: "Press Start 2P", system-ui;
    font-weight: 400;
    font-style: normal;
  }
</style>
