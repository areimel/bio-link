---
// SocialLinks component for displaying social media icons
import { Icon } from 'astro-icon/components';

interface SocialLink {
  platform: string;
  url: string;
  icon: string;
}

interface Props {
  links: SocialLink[];
}

const { links } = Astro.props;
---

<div class="flex justify-center gap-5 ">
  {
    links.map((link) => (
      <a 
        href={link.url} 
        target="_blank" 
        rel="noopener noreferrer"
        class="neo-button bg-vhs-darkgray dark:bg-vhs-darkgray hover:bg-vhs-orange dark:hover:bg-vhs-orange w-12 h-12 flex items-center justify-center p-0 rounded-lg"
        aria-label={`Visit ${link.platform}`}
      >
        <Icon name={link.icon} class="w-6 h-6 text-vhs-offwhite dark:text-vhs-offwhite" />
      </a>
    ))
  }
</div> 