---
// SocialLinks component for displaying social media icons
import { Icon } from 'astro-icon/components';

interface SocialLink {
  platform: string;
  url: string;
  icon: string;
}

interface Props {
  links: SocialLink[];
}

const { links } = Astro.props;
---

<div class="flex justify-center gap-5 mb-8 neo-container py-4">
  {
    links.map((link) => (
      <a 
        href={link.url} 
        target="_blank" 
        rel="noopener noreferrer"
        class="neo-button bg-vhs-darkgray dark:bg-vhs-darkgray hover:bg-vhs-red dark:hover:bg-vhs-orange w-16 h-16 flex items-center justify-center p-0 rounded-none"
        aria-label={`Visit ${link.platform}`}
      >
        <Icon name={link.icon} class="w-8 h-8 text-vhs-yellow dark:text-vhs-yellow" />
      </a>
    ))
  }
</div> 