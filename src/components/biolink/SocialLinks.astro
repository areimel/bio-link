---
// SocialLinks component for displaying social media icons
import { Icon } from 'astro-icon/components';

interface SocialLink {
  platform: string;
  url: string;
  icon: string;
}

interface Props {
  links: SocialLink[];
}

const { links } = Astro.props;
---

<div class="flex justify-center gap-4 mb-8">
  {
    links.map((link) => (
      <a 
        href={link.url} 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-vhs-darkgray hover:text-vhs-red dark:text-vhs-yellow dark:hover:text-vhs-orange transition-colors rounded-full bg-vhs-darkgray dark:bg-vhs-darkgray p-2 w-12 h-12 flex items-center justify-center"
        aria-label={`Visit ${link.platform}`}
      >
        <Icon name={link.icon} class="w-8 h-8 text-vhs-yellow dark:text-vhs-yellow" />
      </a>
    ))
  }
</div> 