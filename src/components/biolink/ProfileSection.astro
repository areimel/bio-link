---
// ProfileSection component for displaying user profile information

interface Props {
  name: string;
  title: string;
  description: string;
  avatar: string;
}

const { name, title, description, avatar } = Astro.props;
---

<div class="flex flex-col items-center text-center px-4 py-6">
  <!-- Profile Avatar -->
  <div class="w-24 h-24 mb-4 overflow-hidden rounded-full">
    <img 
      src={avatar} 
      alt={`${name}'s profile picture`} 
      class="w-full h-full object-cover"
    />
  </div>
  
  <!-- Profile Info -->
  <h1 class="text-2xl font-bold mb-1">{name}</h1>
  <h2 class="text-lg text-gray-600 dark:text-gray-300 mb-2">{title}</h2>
  <p class="text-sm text-gray-500 dark:text-gray-400 max-w-md mb-4">{description}</p>
</div> 