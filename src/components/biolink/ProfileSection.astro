---
// ProfileSection component for displaying user profile information
import ToggleTheme from '~/components/common/ToggleTheme.astro';

interface Props {
  name: string;
  title: string;
  description: string;
  avatar: string;
}

const { name, title, description, avatar } = Astro.props;
---

<div class="flex flex-col items-center text-center px-4 py-6 relative">
  <!-- Dark/Light Mode Toggle -->
  <div class="absolute top-2 right-2">
    <ToggleTheme 
      iconClass="w-6 h-6 text-vhs-red dark:text-vhs-yellow" 
      class="hover:bg-vhs-offwhite dark:hover:bg-slate-700 focus:ring-vhs-orange dark:focus:ring-vhs-magenta"
    />
  </div>

  <!-- Profile Avatar -->
  <div class="w-48 h-48 mb-4 overflow-hidden rounded-full border-4 border-vhs-red">
    <img 
      src={avatar} 
      alt={`${name}'s profile picture`} 
      class="w-full h-full object-cover"
    />
  </div>
  
  <!-- Profile Info -->
  <h1 class="text-2xl font-press-start mb-4 text-vhs-darkgray dark:text-white leading-relaxed">{name}</h1>
  <h2 class="text-lg font-press-start text-vhs-red dark:text-vhs-yellow mb-4 tracking-tight">{title}</h2>
  <p class="text-sm font-courier-prime text-default dark:text-muted max-w-md mb-4">{description}</p>
</div> 