---
import Layout from '~/layouts/PageLayout.astro';
import BioLink from '~/components/biolink/BioLink.astro';

// Import data from JSON file
import bioLinkData from '../data/biolink.json';

const metadata = {
  title: `${bioLinkData.profile.name} - Links`,
  description: bioLinkData.profile.description,
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Rainbow VHS-inspired gradient decoration at the top -->
  <div class="w-full h-3 bg-rainbow-gradient"></div>
  
  <BioLink 
    profile={bioLinkData.profile}
    socialLinks={bioLinkData.socialLinks}
    contactLinks={bioLinkData.contactLinks}
    projectLinks={bioLinkData.projectLinks}
  />
  
  <!-- Footer with subtle VHS-inspired design -->
  <div class="w-full text-center py-4 text-xs text-vhs-darkgray dark:text-vhs-yellow">
    <p>Made with vintage vibes ðŸ“¼</p>
  </div>
</Layout>
